<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- <param name="ConversionPattern" value="%-5p: %c - %m%n" /> -->
			<param name="ConversionPattern" value="%-5p [%d{MM/dd HH:mm:ss}] (%13F:%M:%L) %m%n" />
		</layout>
	</appender>
	
	<appender name= "rolling2" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/home/encore/weblog" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p %C{1}.%M(%F:%L) - %m%n" />
		</layout>
	</appender>
	
	<appender name="console_sql" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="kafkaAppender" class="org.apache.kafka.log4jappender.KafkaLog4jAppender">
        <param name="Topic" value="test-topic" />
        <param name="BrokerList" value="10.0.2.151:9092" />
        <param name="syncSend" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L %% - %m%n" />
        </layout>
    </appender>
	
	<!-- Application Loggers -->
	<logger name="com.charida.app">
		<level value="debug" />
		<appender-ref ref="rolling2" />
		<appender-ref ref="kafkaAppender" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>
	<logger name="org.springframework.aop">
		<level value="info" />
	</logger>
	<!-- Query Loggers -->
    <logger name="jdbc.sqlonly" additivity="false">  
        <level value="debug"/>  
        <appender-ref ref="console_sql"/>  
    </logger>
    
    <logger name="jdbc.resultsettable" additivity="false">  
        <level value="debug"/>  
        <appender-ref ref="console_sql"/>  
    </logger>  

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
